<div id="mechanic-<%= @mechanic.id %>">
  <h2> Name: <%= @mechanic.name %> </h2>
  <h2> Experience: <%= @mechanic.years %> years </h2>

  <h3> Rides Worked on: </h3>
  <ul> <% @mechanic.rides.each do |ride| %>
    <li> <%= ride.name %> </li>
  <% end %> </ul>

  <%= form_with url: "/mechanics/#{@mechanic.id}/rides", method: :post, data: {turbo: false} do |form| %>
    <%= form.label "Add a new ride" %>
    <%= form.text_area :ride_id %>
    <%= form.submit "Submit" %>
  <% end %>
</div>


